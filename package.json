{
  "name": "bjornmelin-platform-io",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @bjornmelin/web dev",
    "build": "pnpm --filter \"@bjornmelin/*\" build",
    "lint": "pnpm --filter \"@bjornmelin/*\" lint",
    "clean": "pnpm -r exec rimraf .next node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "eslint": "^9.15.0",
    "eslint-config-next": "15.0.3",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3",
    "@playwright/test": "^1.42.1",
    "@testing-library/react": "^14.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "vitest": "^1.3.1"
  }
}
