{
  "name": "infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "bin/app.js",
    "codeartifact": "bin/codeartifact-app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "cdk": "cdk",
    "deploy:dns": "cdk deploy prod-portfolio-dns",
    "deploy:storage": "cdk deploy prod-portfolio-storage",
    "deploy:deployment": "cdk deploy prod-portfolio-deployment",
    "deploy:monitoring": "cdk deploy prod-portfolio-monitoring",
    "deploy:email": "cdk deploy prod-portfolio-email",
    "deploy:all": "cdk deploy --all",
    "destroy:all": "cdk destroy --all",
    "diff": "cdk diff",
    "deploy:codeartifact": "cdk deploy BjornmelinCodeArtifactStack --app 'npx ts-node bin/codeartifact-app.ts'",
    "diff:codeartifact": "cdk diff BjornmelinCodeArtifactStack --app 'npx ts-node bin/codeartifact-app.ts'"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.0",
    "@types/node": "^20.7.1",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "aws-cdk": "^2.178.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.721.0",
    "aws-cdk-lib": "^2.189.1",
    "cdk-nag": "^2.28.0",
    "constructs": "^10.4.0",
    "source-map-support": "^0.5.21"
  }
}
