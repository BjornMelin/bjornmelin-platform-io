{
  "name": "infrastructure",
  "version": "1.0.0",
  "bin": "bin/app.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "cdk": "cdk",
    "deploy:dns": "cdk deploy prod-portfolio-dns",
    "deploy:storage": "cdk deploy prod-portfolio-storage",
    "deploy:deployment": "cdk deploy prod-portfolio-deployment",
    "deploy:monitoring": "cdk deploy prod-portfolio-monitoring",
    "deploy:email": "cdk deploy prod-portfolio-email",
    "deploy:all": "cdk deploy --all",
    "destroy:all": "cdk destroy --all",
    "diff": "cdk diff"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.159",
    "@types/node": "^24.10.9",
    "aws-cdk": "^2.1101.0",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.17"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "unrs-resolver",
      "esbuild"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-cloudfront": "3.970.0",
    "@aws-sdk/client-ssm": "3.970.0",
    "aws-cdk-lib": "2.235.0",
    "constructs": "^10.4.4",
    "resend": "^6.7.0",
    "source-map-support": "^0.5.21"
  }
